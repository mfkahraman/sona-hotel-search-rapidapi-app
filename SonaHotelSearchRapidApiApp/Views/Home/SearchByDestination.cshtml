@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Sona Otel Arama">
    <meta name="keywords" content="Sona, otel, rezervasyon, arama">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sona Otel Arama</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Cabin:400,500,600,700&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/sona-master/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/sona-master/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/sona-master/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/sona-master/css/flaticon.css" type="text/css">
    <link rel="stylesheet" href="~/sona-master/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/sona-master/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/sona-master/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/sona-master/css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="~/sona-master/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/sona-master/css/style.css" type="text/css">
</head>

<body>
    <!-- Sayfa Yükleniyor -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Header Başlangıç -->
    <header class="header-section">
        <div class="menu-item">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2">
                        <div class="logo">
                            <a href="./index.html">
                                <img src="~/sona-master/img/logo.png" alt="">
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-10">
                        <div class="nav-menu">
                            <nav class="mainmenu">
                                <ul>
                                    <li class="active"><a href="/Home/Index">Anasayfa</a></li>
                                    <li><a href="/Home/Hotels">Oteller</a></li>
                                    <li><a href="./about-us.html">Hakkımızda</a></li>
                                    <li>
                                        <a href="./pages.html">Sayfalar</a>
                                        <ul class="dropdown">
                                            <li><a href="./room-details.html">Otel Detay</a></li>
                                            <li><a href="#">Aile Odası</a></li>
                                            <li><a href="#">Lüks Oda</a></li>
                                        </ul>
                                    </li>
                                    <li><a href="./blog.html">Haberler</a></li>
                                    <li><a href="./contact.html">İletişim</a></li>
                                </ul>
                            </nav>
                            <div class="nav-right search-switch">
                                <i class="icon_search"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Header Bitiş -->

    <!-- Hero Bölümü Başlangıç -->
    @await Component.InvokeAsync("_SearchByDestinationComponent")
    <!-- Hero Bölümü Bitiş -->

    <!-- Footer Başlangıç -->
    <footer class="footer-section">
        <div class="container">
            <div class="footer-text">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="ft-about">
                            <div class="logo">
                                <a href="#">
                                    <img src="~/sona-master/img/footer-logo.png" alt="">
                                </a>
                            </div>
                            <p>90'dan fazla yerel sitede milyonlarca gezgine ilham veriyoruz ve ulaşıyoruz</p>
                            <div class="fa-social">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-tripadvisor"></i></a>
                                <a href="#"><i class="fa fa-instagram"></i></a>
                                <a href="#"><i class="fa fa-youtube-play"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 offset-lg-1">
                        <div class="ft-contact">
                            <h6>Bize Ulaşın</h6>
                            <ul>
                                <li>(212) 123 4567</li>
                                <li>info@sonaotel.com</li>
                                <li>Taksim Mah. No: 23, İstanbul, Türkiye</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 offset-lg-1">
                        <div class="ft-newslatter">
                            <h6>Güncellemeler</h6>
                            <p>Son kampanya ve duyurulardan haberdar olun.</p>
                            <form action="#" class="fn-form">
                                <input type="text" placeholder="E-posta">
                                <button type="submit"><i class="fa fa-send"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="copyright-option">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7">
                        <ul>
                            <li><a href="#">İletişim</a></li>
                            <li><a href="#">Kullanım Koşulları</a></li>
                            <li><a href="#">Gizlilik</a></li>
                            <li><a href="#">Çevre Politikaları</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-5">
                        <div class="co-text">
                            <p>
                                Copyright &copy;<script>document.write(new Date().getFullYear());</script> Tüm hakları saklıdır | Bu şablon <i class="fa fa-heart" aria-hidden="true"></i> ile tasarlandı <a href="https://colorlib.com" target="_blank">Colorlib</a> tarafından
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Bitiş -->

    <!-- Search model Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch"><i class="icon_close"></i></div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Search here.....">
            </form>
        </div>
    </div>
    <!-- Search model end -->

    <!-- Js Plugins -->
    <script src="~/sona-master/js/jquery-3.3.1.min.js"></script>
    <script src="~/sona-master/js/bootstrap.min.js"></script>
    <script src="~/sona-master/js/jquery.magnific-popup.min.js"></script>
    <script src="~/sona-master/js/jquery.nice-select.min.js"></script>
    <script src="~/sona-master/js/jquery-ui.min.js"></script>
    <script src="~/sona-master/js/jquery.slicknav.js"></script>
    <script src="~/sona-master/js/owl.carousel.min.js"></script>
    <script src="~/sona-master/js/main.js"></script>
</body>

</html>